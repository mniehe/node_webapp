
{
  "name": "node-webapp",
  "version": "0.0.1",
  "description": "The basic packages required for a node webapp",
  "author": {
    "name": "Mark Niehe",
    "email": "mark.niehe@canucks.com"
  },
  "contributors": [
    {
      "name": "Mark Niehe",
      "email": "mark.niehe@canucks.com"
    }
  ],
  "scripts": {
    "postinstall": "jspm install",
    "dev": "NODE_ENV=development gulp --harmony",
    "prod": "NODE_ENV=production node --harmony app.js",
    "build": "gulp build && jspm bundle-sfx app dist/js/bundle.js",
    "test": "NODE_ENV=test mocha --harmony --require co-mocha --reporter spec --recursive"
  },
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mniehe/node_webapp"
  },
  "dependencies": {
    "koa": "^0.21.0",
    "koa-better-body": "^1.0.17",
    "koa-logger": "^1.2.2",
    "koa-router": "^5.1.2",
    "koa-static": "^1.4.9",
    "koa-validate": "^0.2.11",
    "mongoose": "^4.0.6",
    "validator": "^3.40.1"
  },
  "devDependencies": {
    "browser-sync": "^2.7.4",
    "chai": "^3.0.0",
    "co-mocha": "^1.1.2",
    "co-supertest": "0.0.10",
    "gulp": "^3.8.11",
    "gulp-babel": "^5.1.0",
    "gulp-changed": "^1.2.1",
    "gulp-copy": "0.0.2",
    "gulp-eslint": "^0.12.0",
    "gulp-imagemin": "^2.2.1",
    "gulp-nodemon": "^2.0.3",
    "gulp-plumber": "^1.0.1",
    "gulp-sass": "^2.0.1",
    "gulp-sourcemaps": "^1.5.2",
    "imagemin-pngquant": "^4.1.0",
    "jspm": "^0.15.6",
    "materialize-sass": "^0.95.2",
    "mocha": "^2.2.5",
    "object.assign": "^3.0.0",
    "require-dir": "^0.3.0",
    "rimraf": "^2.3.4",
    "run-sequence": "^1.1.0",
    "supertest": "^1.0.1"
  },
  "preferGlobal": false,
  "private": true,
  "analyze": true,
  "license": "MIT",
  "jspm": {
    "directories": {
      "baseURL": "dist"
    },
    "configFile": "config/jspm_config.js",
    "dependencies": {
      "aurelia-bootstrapper": "github:aurelia/bootstrapper@^0.12.0",
      "aurelia-framework": "github:aurelia/framework@^0.11.0",
      "aurelia-logging-console": "github:aurelia/logging-console@^0.4.0",
      "materialize": "github:dogfalo/materialize@^0.96.1"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.1.13",
      "babel-runtime": "npm:babel-runtime@^5.1.13",
      "core-js": "npm:core-js@^0.9.4"
    }
  }
}
